<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesionActivity"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <!--android:background="#ffdb00"-->

    <ImageView
        android:src="@mipmap/univdule"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/etInicioSesionNombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Nombre de usuario"/>

    <EditText
        android:id="@+id/etInicioSesionPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="ContraseÃ±a"/>

    <Button
        android:id="@+id/btnInicioSesionInicioSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:clickable="true"
        />

    <Button
        android:id="@+id/btnInicioSesionRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRO"
        android:clickable="true"/>

</LinearLayout>